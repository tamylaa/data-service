{
  "name": "mongodb-worker",
  "version": "1.0.0",
  "description": "MongoDB API service for Cloudflare Worker",
  "type": "module",
  "main": "api/server.js",
  "scripts": {
    "dev": "node scripts/dev-server.js",
    "prod": "node scripts/prod-simulator.js",
    "test": "jest --detectOpenHandles --forceExit",
    "test:health": "node scripts/test-health.js",
    "build": "esbuild api/server.js --bundle --platform=node --target=node18 --outdir=dist",
    "start": "wrangler dev",
    "deploy": "wrangler deploy",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "lint": "eslint \"**/*.js\" --fix"
  },
  "keywords": [
    "mongodb",
    "cloudflare-workers",
    "api"
  ],
  "author": "Tamyla Team",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mongoose": "^8.0.0",
    "crypto": "^1.0.1",
    "uuid": "^9.0.1",
    "express-rate-limit": "^6.7.0",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "jsonwebtoken": "^9.0.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240208.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.4",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "wrangler": "^4.23.0",
    "esbuild": "^0.25.6"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
